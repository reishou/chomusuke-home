---
// src/pages/index.astro
import '../styles/global.css';  // Nếu bạn đã cài Tailwind local
---

<!doctype html>
<html lang="en" class="bg-gray-900 text-gray-100">
<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>Chomusuke Demo Hub</title>

	<script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script>

	<link href="https://fonts.googleapis.com/css2?family=M+PLUS+Rounded+1c:wght@700;800;900&family=Comfortaa:wght@700&display=swap" rel="stylesheet" />

	<style>
		body { font-family: 'Comfortaa', cursive; overflow-x: hidden; }
		.full-bg {
			/* Tối vừa đủ để Chomusuke hiện rõ đầu và lửa */
			background: linear-gradient(rgba(10,0,30,0.65), rgba(20,0,40,0.85)),
			url('https://images6.alphacoders.com/791/791085.png') center/cover no-repeat fixed;
			min-height: 100vh;
		}
		.card {
			backdrop-filter: blur(22px);
			background: rgba(20,20,40,0.45);
			border: 2px solid rgba(255,100,200,0.4);
			border-radius: 2.5rem; /* Bo góc mạnh hơn như mockup */
			transition: all 0.4s ease;
			padding: 2rem;
			box-shadow: 0 15px 40px rgba(0,0,0,0.6);
			display: flex;
			flex-direction: column;
		}
		.card:hover {
			transform: translateY(-12px) scale(1.04);
			box-shadow: 0 0 90px rgba(255,100,200,0.5);
			border-color: rgba(255,100,200,0.8);
		}
		.glow-eyes {
			position: absolute;
			inset: 0;
			background: radial-gradient(circle at center, rgba(255,100,200,0.5) 8%, transparent 50%);
			opacity: 0;
			transition: opacity 0.6s;
			pointer-events: none;
		}
		.card:hover .glow-eyes { opacity: 0.7; }
		#particles-bg { position: fixed; inset: 0; z-index: -1; }

		/* Button giống hệt mockup: đỏ → hồng đậm, bo tròn cực mạnh */
		.enter-btn {
			background: linear-gradient(to right, #ff2255, #ff5588);
			border-radius: 9999px;
			padding: 1.1rem 2.8rem;
			font-size: 1.8rem;
			box-shadow: 0 8px 25px rgba(255,50,100,0.5);
			transition: all 0.3s;
			margin-top: auto; /* Đẩy button xuống đáy card */
		}
		.enter-btn:hover {
			background: linear-gradient(to right, #ff1144, #ff4477);
			transform: translateY(-3px) scale(1.08);
			box-shadow: 0 0 50px rgba(255,50,150,0.7);
		}
	</style>
</head>
<body class="min-h-screen">
<div id="particles-bg"></div>

<div class="full-bg flex flex-col items-center justify-center min-h-screen py-8 px-4">
	<!-- Hero fix giống mockup: thêm lại title hồng nhỏ trên cùng -->
	<div class="text-center mb-12">
		<p class="text-2xl md:text-3xl font-bold text-pink-500 mb-4 tracking-wider" style="text-shadow: 0 0 15px rgba(255,100,200,0.7);">
			Chomusuke's Lair
		</p>
		<h1 class="text-4xl md:text-6xl font-black mb-4 text-white">
			Meow~ Welcome to the magical realm
		</h1>
		<p class="text-xl md:text-2xl text-gray-300 animate-pulse">
			Choose your portal wisely...
		</p>
	</div>

	<!-- Grid 3 cột từ sm trở lên -->
	<div class="grid grid-cols-1 sm:grid-cols-3 gap-10 md:gap-16 max-w-7xl w-full">
		<!-- PHP Portal -->
		<div class="relative card overflow-hidden">
			<div class="glow-eyes"></div>
			<div class="flex flex-col h-full">
				<div class="mb-8">
					<h3 class="text-4xl md:text-5xl font-bold text-blue-400 mb-4">PHP Portal</h3>
					<p class="text-lg md:text-xl text-gray-300 leading-relaxed">Classic spells with modern incantations</p>
				</div>
				<a href="#" class="enter-btn block text-center font-bold text-white">
					Enter →
				</a>
			</div>
		</div>

		<!-- Node.js Portal -->
		<div class="relative card overflow-hidden">
			<div class="glow-eyes"></div>
			<div class="flex flex-col h-full">
				<div class="mb-8">
					<h3 class="text-4xl md:text-5xl font-bold text-green-400 mb-4">Node.js Portal</h3>
					<p class="text-lg md:text-xl text-gray-300 leading-relaxed">Swift wings and real-time shadows</p>
				</div>
				<a href="#" class="enter-btn block text-center font-bold text-white">
					Enter →
				</a>
			</div>
		</div>

		<!-- Go Portal -->
		<div class="relative card overflow-hidden">
			<div class="glow-eyes"></div>
			<div class="flex flex-col h-full">
				<div class="mb-8">
					<h3 class="text-4xl md:text-5xl font-bold text-cyan-400 mb-4">Go Portal</h3>
					<p class="text-lg md:text-xl text-gray-300 leading-relaxed">Efficient paths through the darkness</p>
				</div>
				<a href="#" class="enter-btn block text-center font-bold text-white">
					Enter →
				</a>
			</div>
		</div>
	</div>
</div>

<script is:inline>
	particlesJS('particles-bg', {
		particles: {
			number: { value: 75 },
			color: { value: ['#ff5588', '#ff88bb', '#ff3377', '#ffffff'] },
			shape: { type: 'circle' },
			opacity: { value: 0.65, random: true },
			size: { value: 4, random: true },
			move: { enable: true, speed: 1.6, direction: 'none', random: true }
		},
		interactivity: {
			events: { onhover: { enable: true, mode: 'bubble' } },
			modes: { bubble: { distance: 180, size: 11, duration: 2, opacity: 0.8 } }
		}
	});
</script>
</body>
</html>